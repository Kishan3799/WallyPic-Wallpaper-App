<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/colorOnSurface"/>
            <solid android:color="#3FBCC2"/>
            <padding android:left="5dp" android:right="5dp"
                android:bottom="2dp" android:top="2dp"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <item >
        <shape>
            <stroke android:width="1dp" android:color="@color/colorOnSurface"/>
            <solid android:color="@color/colorSurface"
                />
            <padding android:top="2dp" android:bottom="2dp" android:right="5dp" android:left="5dp"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</selector>