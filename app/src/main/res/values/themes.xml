<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WallpaperApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.WallpaperApp" parent="Base.Theme.WallpaperApp" />

    <style name="Toolbar.TitlebarText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">.01sp</item>
        <item name="android:alpha">0.0</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="actionTextColorAlpha">0</item>
    </style>
    
    <style name="Toolbar.TitlebarText.Expanded" parent="TextAppearance.AppCompat.Widget.ActionBar.Title"
        >
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
    </style>
    
    <style name="Tab">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="tabGravity">center</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="randomImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_20sdp</item>
    </style>
</resources>