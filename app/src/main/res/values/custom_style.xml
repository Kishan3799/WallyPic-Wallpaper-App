<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.WallyPic.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo_2</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.WallpaperApp</item>
    </style>

    <style name="Toolbar.TitlebarText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">.01sp</item>
        <item name="android:alpha">0.0</item>
        <item name="fontFamily">@font/pacifico_regular</item>
        <item name="actionTextColorAlpha">0</item>
    </style>

    <style name="Toolbar.TitlebarText.Expanded" parent="TextAppearance.AppCompat.Widget.ActionBar.Title"
        >
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="fontFamily">@font/pacifico_regular</item>
    </style>

    <style name="Tab">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="tabGravity">center</item>
        <item name="fontFamily">@font/playfair_display_bold</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="randomImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_20sdp</item>
    </style>
</resources>