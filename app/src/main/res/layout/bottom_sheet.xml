<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription"
            android:src="@drawable/baseline_menu_24"
            />
        
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/downloadFromNet"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:drawableStart="@drawable/download_svgrepo_com"
            android:drawablePadding="@dimen/_70sdp"
            android:fontFamily="@font/playfair_display_bold"
            android:text="@string/download"
            android:gravity="start|center_vertical"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/secondary_light_color"
            android:textAllCaps="false"
            android:background="@drawable/main_selector"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/setAsHomeScreen"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:drawableStart="@drawable/baseline_crop_original_24"
            android:drawablePadding="@dimen/_70sdp"
            android:fontFamily="@font/playfair_display_bold"
            android:text="@string/set_as_home_screen"
            android:gravity="center_vertical"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/secondary_light_color"
            android:textAllCaps="false"
            android:background="@drawable/main_selector"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/setAsLockScreen"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:drawableStart="@drawable/baseline_lock_outline_24"
            android:drawablePadding="@dimen/_70sdp"
            android:fontFamily="@font/playfair_display_bold"
            android:text="@string/set_as_lock_screen"
            android:gravity="center_vertical"
            android:textSize="@dimen/_12ssp"
            android:textAllCaps="false"
            android:textColor="@color/secondary_light_color"
            android:background="@drawable/main_selector"
            />
    </LinearLayout>
</layout>